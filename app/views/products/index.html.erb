<h3>Products</h3>

<div class="row">
<%= form_tag products_path, :method => :get do %>
    <div class="large-8 columns">
        <div class="row collapse">
            <div class="small-7 columns">
                <%= text_field_tag :search, params[:search], placeholder: "Search in name or description" %>
            </div>
            <div class="small-2 columns">
                <%= submit_tag "Search", :name => nil, :class => "button postfix" %>
            </div>
            <div class="small-1 columns"></div>
            <div class="small-2 columns">
              <%= link_to "All products", products_path, :class => "button postfix" %>
            </div>
        </div>
    </div>
<% end %>
</div>

<div id="results">
  <%= render "results" %>
</div>
<br>

<%= link_to 'New Product', new_product_path, :class => 'button' %>
</div>